{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "#/objects/cave-system",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "length": {
      "type": ["number", "null"],
      "minimum": 0
    },
    "vertical_range": {
      "type": ["number", "null"]
    },
    "caves": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "$ref": "#/objects/tag"
      }
    },
    "references": {
      "type": ["string", "null"]
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "integer"},
          "url": {"type": "string"},
          "original_filename": {"type": "string"},
          "mime_type": {"type": "string"},
          "size": {"type": "integer"},
          "details": {"type": ["string", "null"]}
        },
        "required": ["id", "url", "original_filename", "mime_type", "size"]
      }
    }
  },
  "required": ["id", "name", "description", "caves", "tags", "files"],
  "additionalProperties": false
}