{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "#/objects/cave-summary",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "slug": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "cave_system_id": {
      "type": "integer",
      "minimum": 1
    },
    "location_name": {
      "type": ["string", "null"]
    },
    "location_country": {
      "type": ["string", "null"]
    },
    "location_lat": {
      "type": ["number", "null"]
    },
    "location_lng": {
      "type": ["number", "null"]
    },
    "location_alt": {
      "type": ["number", "null"]
    },
    "access_info": {
      "type": ["string", "null"]
    },
    "hero_image": {
      "type": ["string", "null"]
    },
    "entrance_image": {
      "type": ["string", "null"]
    }
  },
  "required": ["id", "name", "slug", "description", "cave_system_id"],
  "additionalProperties": false
}