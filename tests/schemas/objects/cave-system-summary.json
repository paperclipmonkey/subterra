{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "#/objects/cave-system-summary",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "slug": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "length": {
      "type": ["number", "null"],
      "minimum": 0
    },
    "vertical_range": {
      "type": ["number", "null"]
    },
    "references": {
      "type": ["string", "null"]
    }
  },
  "required": ["id", "name", "slug", "description"],
  "additionalProperties": false
}