{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "#/objects/trip",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": ["string", "null"]
    },
    "system": {
      "$ref": "cave-system-summary.json"
    },
    "entrance": {
      "anyOf": [
        {"$ref": "cave-summary.json"},
        {"type": "null"}
      ]
    },
    "exit": {
      "anyOf": [
        {"$ref": "cave-summary.json"},
        {"type": "null"}
      ]
    },
    "start_time": {
      "type": "string",
      "format": "date-time"
    },
    "end_time": {
      "type": ["string", "null"],
      "format": "date-time"
    },
    "participants": {
      "type": "array",
      "items": {
        "$ref": "user.json"
      }
    },
    "media": {
      "type": "array",
      "items": {
        "$ref": "media.json"
      }
    }
  },
  "required": ["id", "name", "description", "system", "entrance", "exit", "start_time", "participants", "media"],
  "additionalProperties": false
}